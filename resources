        id,
        nome,
        updatedAt,
        materiais[],
    }
}
PUT -> /tabelas/:id
---Headers:
Authorization: Bearer <TOKEN>
--Requisi칞ao:
{
    "tabela":{
        "nome":"TABELA ATUALIZADA" //opicional
    }
    "materiais":[
        {
            "materialID":1,
            "v_compra":12.45,
        },
        {
            "materialID":3,
            "v_compra":15.95,
            
        }
    ]
}

